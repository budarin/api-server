{
  "name": "api-server",
  "version": "1.0.0",
  "description": "api-server",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "check-security": "nsp check --output summary",
    "check-security-formatted": "nsp check --output checkstyle",
    "check-updates": "updtr",
    "build": "better-npm-run build-server",
    "start:prod": "better-npm-run build-server && better-npm-run start-prod"
  },
  "betterScripts": {
    "build-server": {
      "command": "sh ./scripts/build.sh",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-prod": {
      "command": "node ./build/server.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/budarin/api-server.git"
  },
  "author": "Vadim Budarin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/budarin/api-server/issues"
  },
  "homepage": "https://github.com/budarin/api-server#readme",
  "dependencies": {
    "better-npm-run": "0.0.11",
    "koa": "^2.0.0-alpha.7",
    "koa-body": "^1.5.0",
    "koa-convert": "^1.2.0",
    "koa-router": "^7.0.1",
    "pg": "^6.1.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.14.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-preset-node6": "^11.0.0",
    "babel-register": "^6.14.0",
    "nsp": "^2.6.1",
    "nsp-formatter-checkstyle": "^1.0.1",
    "updtr": "^0.2.1"
  }
}
